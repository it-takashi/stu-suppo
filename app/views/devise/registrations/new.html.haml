%dl
  %h2 Create Account
  %h5 新規アカウントの作成
  = render "devise/shared/links"
  .account-page__inner--right.user-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        .field-label
          = f.label :name, "名前"
          %span.must※
        .field-input
          = f.text_field :name,placeholder: "名前を入力してくだい", autofocus: true
      .field-image 
        .field-image-label
          = f.label :image, class:"form_image" do
            画像
            .preview-box
              = image_tag(src= "/no-image.png", class: "tweet_image")
          = f.file_field :image, class: 'hidden'
      .field
        .field-label
          = f.label :email, "メールアドレス"
          %span.must※
        .field-input
          = f.text_field :email, placeholder: "メールアドレスを入力してください", autofocus: true
      .field
        .field-label
          = f.label :password, "パスワード (英数字8文字以上)"
        .field-input
          = f.password_field :password, placeholder: "パスワードを入力してください", autocomplete: "off"
      .field
        .field-label
          = f.label :password_confirmation
        .field-input
          = f.password_field :password_confirmation, autocomplete: "off"
      .field
        .field-label
          = f.label :introduction, "自己紹介文（電話するときに表示されます）"
        .field-input
          = f.text_area :introduction, placeholder: "自己紹介文（電話するときに表示されます）", autofocus: true
      .field
        .field-label
          = f.label :subject, "好きな教科"
          %span.must※
        .field-input
          = f.text_field :subject,placeholder: "好きな教科（数学、情報処理など）", autofocus: true
      .actions
        = f.submit "投稿する", class: 'btn'
