#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト",  destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field-image 
          .field-image-label
            = f.label :image, "自己紹介画像"
          .field-input
            -# = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'

        .field
          .field-label
            = f.label :introduction, "自己紹介文"
          .field-input
            = f.text_area :introduction

        .field
          .field-label
            = f.label :subject,"好きな教科"
          .field-input
            = f.text_field :subject

        .actions
          = f.submit "Update", class: 'btn'
