= form_for(current_user) do |f|
  .user-sign_up-login-box
    %dl
      %h2 Edit Account
      %h5 アカウントの編集
      .ben
        = link_to "ログアウト",  destroy_user_session_path, method: :delete, class: 'new-user_login_btn'
        = link_to "トップページに戻る", :back, class: 'new-user_login_btn'
      .field
        .field-label
          = f.label :name, "名前"
          %span.must※
        .field-input
          = f.text_field :name,placeholder: "名前を入力してくだい", autofocus: true
      .field-image 
        .field-image-label
          = f.label :image, class:"form_image" do
            画像
            .preview-box
              - if current_user.image.present?
                = image_tag current_user.image.url, class: "tweet_image"
              - else
                = image_tag(src= "/no-image.png", class: "tweet_image")
          = f.file_field :image, class: 'hidden'
      .field
        .field-label
          = f.label :email, "メールアドレス"
          %span.must※
        .field-input
          = f.text_field :email, placeholder: "メールアドレスを入力してください", autofocus: true
      .field
        .field-label
          = f.label :introduction, "自己紹介文"
        .field-input
          = f.text_area :introduction, placeholder: "自己紹介文（電話するときに表示されます）", autofocus: true
      .field
        .field-label
          = f.label :subject, "好きな教科"
        .field-input
          = f.text_field :subject,placeholder: "好きな教科（数学、情報処理など）", autofocus: true
    .actions
      = f.submit "投稿する", class: 'btn'


