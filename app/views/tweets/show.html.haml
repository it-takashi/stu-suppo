%header
  = render "header"

%h1.show-title
  皆の学び

.show-body
  .author
    = link_to "#", class: "link-image"do
      - if @tweet.user.image.present?
        %p
          = image_tag @tweet.user.image.url, class: 'author__image'
      - else
        .author__no-image
          No-
          %br
          image
    = link_to "#", class: "author__name" do
      = @tweet.user.name
  -if user_signed_in? && current_user.id == @tweet.user_id
    .tweetManage
      = link_to "編集", edit_tweet_path(@tweet.id), class: "tweetManage__edit"
      = link_to "削除", tweet_path(@tweet.id), method: :delete, class: "tweetManage__destroy"
  .tweet
    .tweet__title
      = @tweet.title
    .tweet__tags
      .tweet__tags__tag
      .tweet__tags__tag
      .tweet__tags__tag
    .tweet__body
      = @tweet.body
    - if @tweet.image.present?
      %p
        = image_tag @tweet.image.url, class: 'tweet__image'

.form
  = form_for [@tweet, @reply] do |f|
    = f.text_field :comment, class: 'form__reply', placeholder: 'type a message'
    .form__mask
      = f.label :image, class: 'form__mask__image' do
        = icon('fas', 'image', class: 'icon')
        = f.file_field :image, class: 'hidden'
    = f.submit 'Send', class: 'form__submit'

.reply-list
  = render partial: 'reply', collection: @replies, as: :replies
